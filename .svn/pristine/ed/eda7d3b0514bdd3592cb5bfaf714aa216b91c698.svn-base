.operate-type{
  min-height: calc(100% - 275px);
  position: relative;
  box-sizing: border-box;
  width: 100%;
  &-banner{
    height: 450px;
    background-image: linear-gradient(to bottom, $--color-primary, $--color-gradient-light-1);
  }
  &-name{
    height: 90px;
    line-height: 90px;
    color: $--color-white;
    margin-bottom: 154px;
    &-main{
      font-size: 30px;
      margin-right: 20px;
    }
    &-sub{
      color: $--color-info;
    }
  }
  &-main{
    @extend container;
    margin-top: -250px;
    text-align: center;
    width: 100%;
    padding: 0 20px;
    box-sizing: border-box;
    z-index: 1000;
    position: relative;
    .operate-col{
      margin-bottom: 20px;
      &-link{
        text-decoration: none;
        .operate-card{
          cursor: pointer;
          padding: 54px 20px;
          border: none;
          &-icon{
            font-size: 128px;
            color: $--color-primary;
          }
          &-name{
            font-size: 24px;
            line-height: 50px;
          }
          &-descript{
            font-size: 16px;
            color: $--color-info;
            height: 48px;
            margin-bottom: 45px;
            max-width: 100%;
            box-sizing: border-box;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
          }
          &-button{
            color: $--color-primary;
            border-color: $--color-primary;
          }
          &.active{
            background-image: linear-gradient(to bottom right, $--color-gradient-light-1, $--color-gradient-light-2);
            .operate-card-name, .operate-card-descript, .operate-card-icon{
              color: $--color-white;
            }
          }
        }
      }
    }
  }
}