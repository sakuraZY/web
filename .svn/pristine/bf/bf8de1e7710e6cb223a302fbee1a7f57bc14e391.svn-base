.geo-login-card{
  background: $--color-white;
  &-tab{
    /deep/ {
      .el-tabs__header{
        .el-tabs__nav{
          display: flex;
          width: 100%;
          .el-tabs__item{
            background-color: $--background-color-base;
            border-top: 5px solid transparent;
            flex-grow: 1;
            line-height: 35px;
            &.is-active{
              background-color: $--color-white;
              border-top-color: $--color-primary;
            }
          }
        }
      }
      .el-tabs__content{
        padding: 0 40px;
        box-sizing: border-box;
      }
    }
  }
  .btn-group{
    padding: 0 40px;
    box-sizing: border-box;
    width: 100%;
    .btn-block{
      width: 100%;
    }
    .register-content{
      position: relative;
      border-top: $--border-dashed;
      margin-top: 40px;
      text-align: center;
      &-text{
        position: relative;
        top: -10px;
        background-color: $--color-white;
        padding: 0 20px;
      }
      &-link{
        text-decoration: none;
        color: $--color-primary;
      }
    }
  }
  .forget-password{
    padding: 0 40px;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    justify-content: flex-end;
    margin-bottom: 25px;
    &-text{
      cursor: pointer;
      &:hover{
        color: $--color-primary;
      }
    }
  }
  &-title{
    font-size: 20px;
    font-weight: bold;
    text-align: center;
    padding: 30px 0 40px;
  }
}