<template>
  <div class="items">
    <ul>
        <li v-for="(item, index) in list" :key="index"
        :class="{'active': inds === index}" @click="handleClick(index)">
        <a>{{item}}</a> <!-- :href="'#t'+(index+1)" -->
        </li>
    </ul>
  </div>
</template>

<script>
export default {
  data() {
    return {
      inds: 0,
    };
  },
  props: ['list', 'indexs'],
  computed: {
    ind: {
      get() {
        return this.indexs;
      },
      set(val) {
        this.inds = val;
      },
    },
  },
  methods: {
    handleClick(index) {
      this.inds = index;
    },
  },
};
</script>
