<template>
  <div class="cfmainInfo" v-loading="showLoading" element-loading-text="拼命加载中">
    <check-data ref="checkBDC" :baseInfo='baseInfo'>
    </check-data>
    <cf-list ref="bdcList" :tableInfo="bdcdyList" :isVisible='show'>
    </cf-list>
    <cf-JBR ref="jbrxx" :isVisible='show'></cf-JBR>
    <cf-Info ref="cfxx" :isVisible='show'></cf-Info>
  </div>
</template>

<script>
import '@/plugins/vueEvent';
import { mapMutations, mapState } from 'vuex';
import checkData from '@/components/realReg/cfdj/CheckData.vue';
import cfList from '@/components/realReg/cfdj/CfList.vue';
import cfInfo from '@/components/realReg/cfdj/CfInfo.vue';
import cfJBR from '@/components/realReg/cfdj/JBRXX.vue';
import { saveCFLHCF } from '@/apis/nres/zxsq';

export default {
  data() {
    return {
      show: false, // 是否显示详细信息
      nodeName: '宜昌',
      info: {
        sqr: sessionStorage.userId,
        lcmc: '查封登记（含轮候查封）',
        djxl: '查封登记',
        djdl: '800',
        ajzt: '0',
        ywlxbm: 'cfdj',
      },
      bdcdyList: [], // 查封清单信息
      baseInfo: { // 数据校验
        cqz: { name: '不动产证书', spanwidth: 16 },
        ywlx: 'cfdj',
      },
      typeName: '流程实例', // 附件类型
      parentPnode: 'cfdj', // 附件节点类型
      showLoading: false, // 是否显示正在加载中
    };
  },
  components: {
    checkData,
    cfList,
    cfJBR,
    cfInfo,
  },
  computed: {
    ...mapState('queryData', { flowdatas: state => state.FlOWDATA }),
  },
  methods: {
    ...mapMutations('cfdj', {
      setMessJson: 'SET_MESSAGEJSON',
      setNodeName: 'SET_NODENAME',
    }),
    checkBeforeSubmit() {
      return this.$refs.cfxx.checkForm();
    },
    // 获取业务信息
    getFlowData() {
      const { cqzh, sqbh } = this.$refs.checkBDC.checkform;
      const cfxx = this.$refs.cfxx.cfxxForm;
      const qlrxx = Object.assign([], this.$refs.jbrxx.tableData);
      let jbr = [];
      if (qlrxx) {
        jbr = qlrxx.map((p, i) => ({
          name: p.qlrmc, zjlb: p.zjlb, zjhm: p.zjhm, dh: p.lxdh, sxh: i + 1,
        }));
      }
      const xgzxx = this.bdcdyList;
      return Object.assign(this.info, {
        sqbh,
        xgzh: cqzh,
        cfxx,
        qlrxx: {
          jbr,
        },
        xgzxx,
      });
    },
    // 设置业务信息
    setFlowData(data) {
      const {
        sqbh, xgzh, cfxx, xgzxx,
      } = data;
      Object.assign(this.$refs.checkBDC.checkform, { sqbh, cqzh: xgzh });
      Object.assign(this.$refs.cfxx.cfxxForm, cfxx);
      Object.assign(this.bdcdyList.cfxxForm, xgzxx);
      this.show = true;
    },
    // 保存业务数据
    handlerStorage() {
      this.getFlowData();
      this.setMessJson(this.info);
      saveCFLHCF({
        data: this.info,
        nodeName: this.nodeName,
      }).then(({ code } = {}) => {
        if (code === 0) {
          this.$message.success('保存成功');
        } else {
          this.$message.error('保存失败！请稍后重试或联系管理员');
        }
      }, (err) => {
        this.$message.error('保存失败！请稍后重试或联系管理员');
        throw new Error(err);
      });
    },
    // 下一步/提交
    handlerUp() {
      if (!this.checkBeforeSubmit()) {
        this.$message({
          type: 'warning',
          message: '信息输入不完整',
        });
      } else {
        this.handlerStorage();
        this.$emit('funcNext', 1);
      }
    },
  },
  mounted() {
    this.$nextTick(() => {
      if (this.$route.query.sqbh === null || this.$route.query.sqbh === undefined) {
        // console.log('1');
      } else {
        const flowdata = this.flowdatas.filter(p => p.sqbh === this.$route.query.sqbh);
        this.setFlowData({ ...flowdata[0].flowdata });
      }
    });
    this.setNodeName(this.nodeName);
  },
  watch: {
    show(val, oldVal) {
      if (val !== oldVal) {
        this.$emit('SetDisabled', !val);
      }
    },
  },

};

</script>
<style lang='scss' scoped>
@import "./index.scss";
.cfmainInfo {
  padding: 0 20px;
}
</style>
