<template>
  <div>
    <div class="text_tt">
      <h3>一手房转移登记</h3>
    </div>
    <div class="stepwrap firtHand-stepwrap">
      <el-steps :active="stepNum">
        <el-step v-for="(item,index) in stepList" :key="index"
        :title="item"></el-step>
      </el-steps>
    </div>
    <div class="pmain">
      <queryYsfzy v-show="stepNum === 1" @funcNext="stepNext"></queryYsfzy>
      <queryUpload v-if="stepNum === 2" @funcPrev="stepPrev" @func="stepNext"
      :infoJson = "infoJson"></queryUpload>
      <query-success v-if="stepNum === 3" ref="children"
             :infoJson="infoJson"></query-success>
    </div>
  </div>
</template>

<script>
import { submitUrlYSZY } from '@/apis/nres/zxtj';
import queryYsfzy from '@/components/personYsfzy/queryYsfzy';
import queryUpload from '@/components/personYsfzy/queryUpload';
import QuerySuccess from '@/components/personYsfzy/querySuccess';
import { mapMutations } from 'vuex';

export default {
  components: {
    queryYsfzy,
    queryUpload,
    QuerySuccess,
  },
  data() {
    return {
      stepNum: 1,
      stepList: ['填写信息', '上传附件', '完成'],
      infoJson: {
        messJson: ['advance', 'MESSAGEJSON'],
        nodeName: ['advance', 'NODENAME'],
        submitUrl: submitUrlYSZY,
        parentPnode: 'yszydy',
      },
    };
  },
  methods: {
    ...mapMutations('advance', { resetMessageData: 'REST_MESSAGEDATA' }),
    stepNext() {
      this.stepNum += 1;
    },
    stepPrev() {
      this.stepNum -= 1;
    },
  },
  beforeDestroy() {
    this.resetMessageData();
  },
};
</script>

