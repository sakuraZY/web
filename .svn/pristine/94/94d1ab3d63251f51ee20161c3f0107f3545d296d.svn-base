.jdcx-box {
  &-title {
    height: 60px;
    line-height: 60px;
    border-bottom: 1px solid $--border-color-base;
    h3{
      margin:0 0 0 20px;
      padding:0;
      font-size:20px;
      color: $--color-black;
    }
  }
  &-content {
    width: 500px;
    margin: 30px auto;

    /deep/.yzm-input .el-form-item__content {
      display: flex;
      flex-direction: row;

      .yzm-image {
        margin-left: 10px;
      }

      .el-form-item__error {
        top: 80%;
      }
    }

    .btn-group {
      display: flex;
      justify-content: center;
    }
  }
}