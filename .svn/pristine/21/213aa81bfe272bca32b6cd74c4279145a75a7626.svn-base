.user-connect-tranfer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  padding: 10px;
  box-sizing: border-box;
  &-left, &-right{
    height: 100%;
    display: flex;
    flex-direction: column;
    width: calc(50% - 56px);
    .user-select-container{
      flex-grow: 1;
      position: relative;
      &-body{
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
      }
    }
    .title{
      line-height: 45px;
    }
  }
  &-medium{
    display: flex;
    flex-direction: column;
    .tranfer-btn-container{
      margin: 10px 30px;
      .tranfer-btn-icon{
        font-size: 28px;
      }
    }
  }
}