.layout-header{
    position: relative;
    height:80px;
    width:100%;
    display:flex;
    border-bottom: $--border-base;
   .head-logo{
     flex:0 0 35%;
     margin:14px 0 0 35px;
     position: relative;
     .logo{
       background:url('../../../assets/logo.png') no-repeat;
       background-size:100% 100%;
       width:52px;
       height:52px;
     }
     h3{
       position: absolute;
       left: 80px;
       top: 0;
       font-size:32px;
       height:52px;
       line-height: 52px;
       margin: 0;
     }
   }
   @media screen and (max-width: 1310px) {
    .head-logo{
      flex:none;
      h3{
        display: none;
      }
    }
  }
   .head-right{
    //  position: absolute;
    //  top: 0;
    //  right: 40px;
     flex:1;
     display:flex;
     justify-content:flex-end;
     .layout-search{
       float: left;
       margin: 20px 40px 0 0;
       .icon-search{
          font-size: 16px;
          cursor: pointer;
          line-height: 1;
          position: absolute;
          top: 15px;
          right: 5px;
       }
     }
     @media screen and (max-width: 900px) {
      .layout-search{
              display: none;
          }
      }
     .layout-welcome{
       display: flex;
       span{
         margin-top: 30px;
         font-size: 16px;
         line-height: 20px;
         height: 20px;
         color: $--color-primary;
       }
       a{
         margin-top: 30px;
         padding-left: 15px;
         border-left: 1px solid #DADADA;
         margin-left: 15px;
         font-size: 16px;
         line-height: 20px;
         height: 20px;
         cursor:pointer;
         color: $--color-primary;
       }
       .news{
         width:40px;
         height:40px;
         position:relative;
         right:20px;
         margin:20px 0 0 30px;
         cursor: pointer;
         .icon-bell{
           height: 40px;
           width: 40px;
         }
         .news-number {
           width: 20px;
           height: 20px;
           border-radius: 10px;
           background-color: $--background-color-newsbackground;
           font-style:normal;
           text-align: center;
           line-height: 20px;
           font-size: 12px;
           color: $--color-white;
           position: absolute;
           top: 0;
           right: 0;
         }
       }
     }
   }
   @media screen and (max-width: 1310px) {
       .head-right{
          flex:3;
       }
     }
   &:after{
     content: '';
     display: block;
     height: 0;
     line-height: 0;
     clear: both;
   }
 }