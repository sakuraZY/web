.layout-banner{
  flex-grow: 1;
  &-bg{
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: url('../../../assets/login-p-bg2.png') no-repeat center;
    height: 220px;
  }
}
.login-container{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  .login-card{
    width: 372px;
  }
  .login-bg{
    width: 766px;
    height: 629px;
    background: url('../../../assets/login-p-bg.png') no-repeat left center;
    background-size: cover;
  }
}
.main-card{
  margin-bottom: 20px;
}
@media screen and (max-width: 768px) {
  .login-container{
    .login-card{
      width: 100%;
    }
  }
}